 @model HomeDetailsViewModel
 @{      
     ViewBag.Title = "Student Detail Page";              
 }

<div class="row justfy-content-center m-3">
    <div class="col-ms-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Student.Name</h1>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top" src="~/images/可口可爱.jpg"/>
                <h4>学生ID：@Model.Student.Id</h4>
                <h4>邮箱：@Model.Student.Email</h4>
                <h4>班级名称：@Model.Student.ClassName</h4>
            </div>            
            <div class="card-footer text-center">
                <a href="#" class="btn btn-primary">返回</a>
                <a href="#" class="btn btn-primary">编辑</a>
                <a href="#" class="btn btn-danger">删除</a>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/custom.js"></script>
}     

    

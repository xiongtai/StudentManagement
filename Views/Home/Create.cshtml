@model Student
@{
    ViewBag.Title = "创建学生信息";
}

<form class="mt-3" asp-controller="Home" asp-action="Create" method="post">    
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Name"></label>
        <div class="col-sm-10">
            <input class="form-control" placeholder="Please input name" asp-for="Name"/>
        </div>
    </div>
    <div class='form-group row'>
        <label class="col-sm-2 col col-form-label" asp-for="Email"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Email"/>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="ClassName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select class="custom-select mr-sm-2" asp-for="ClassName" asp-items="Html.GetEnumSelectList<ClassNameEnum>()"></select>
        </div>
    </div>

    <div class="form-group row">
        <button class="btn btn-primary" type="submit">创建</button>
    </div>
        
</form>